<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.Pages.MauiPresentationControls"
             Title="Maui Presentation Controls">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <BoxView Color="CornflowerBlue"
                     CornerRadius="20"
                     WidthRequest="200"
                     HeightRequest="200"
                     VerticalOptions="Center"
                     HorizontalOptions="Start" />

            <Label 
                Text="Bem-vido &#10; ao .NET MAUI!"
                CharacterSpacing="1"
                BackgroundColor="Yellow"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                FontSize="Large"
                FontAttributes="Bold"
                VerticalOptions="Center"
                HorizontalOptions="Center" />

            <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                   labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris 
                   nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit 
                   esse cillum dolore eu fugiat nulla pariatur.
                   Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id 
                   est laborum."
                   FontSize="Medium"
                   LineHeight=".8"
                   MaxLines="4" />

            <Label Text="Texto sublinhado"
                   FontSize="Large"
                   TextDecorations="Underline"/>
            <Label Text="Texto rasurado"
                   FontSize="Large"
                   TextDecorations="Strikethrough"/>
            <Label Text="Texto sublinhado e rasurado"
                   FontSize="Large"
                   TextDecorations="Underline,Strikethrough"/>

            <Label Text="Este texto serÃ¡ exibido com letra grande"
                   FontSize="Large"
                   TextTransform="Uppercase"/>
            <Label Text="Texto com letra pequena"
                   FontSize="Large"
                   TextTransform="Lowercase"/>

            <Ellipse Fill="Yellow"
                     Stroke="Blue"
                     StrokeThickness="10"
                     HeightRequest="150"
                     WidthRequest="150"
                     HorizontalOptions="Center"/>

            <Line Stroke="Black"
                  X1="0"
                  Y1="0"
                  X2="100"
                  Y2="50"
                  StrokeThickness="10"/>

            <Rectangle Fill="Green"
                       Stroke="Black"
                       StrokeThickness="5"
                       HeightRequest="150"
                       WidthRequest="150"
                       HorizontalOptions="End"
                       RadiusX="50"
                       RadiusY="50"/>

            <Polygon Points="40,10 70,80 10,50"
                     Fill="LightBlue"
                     Stroke="DarkBlue"
                     StrokeThickness="5"/>

            <Polyline Points="0,0 10,35 15,0 18,60 23,30 35,30 40,0 43,60 48,30 100,30"
                      Stroke="Red"/>

            <Path Data="M 10,100 L 100,100 100,50 Z"
                  Stroke="Black"
                  StrokeThickness="2"
                  Aspect="Uniform"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  HeightRequest="150"
                  WidthRequest="150" />

            <Border Stroke="#C49B33"
                    StrokeThickness="4"
                    StrokeShape="RoundRectangle 40,0,0,40"
                    Background="#2B0B98"
                    Padding="16,8"
                    HorizontalOptions="Center">

                <Label Text="Bem-Vindo ao .Net Maui"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"/>
            </Border>

            <Image Source="dotnet_bot.png"
                   Aspect="AspectFit"/>

            <Image Source="https://macoratti.net/macoratti.gif"
                   Aspect="AspectFit"
                   HeightRequest="300"
                   WidthRequest="300"/>

            <Image Source="https://macoratti.net/1_pulando.gif"
                   Aspect="AspectFit"
                   HeightRequest="100"
                   WidthRequest="100"
                   IsAnimationPlaying="True"
                   />

            <Border Stroke="Black" 
                    StrokeThickness="2"
                    BackgroundColor="LightGray"
                    WidthRequest="200"
                    HeightRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    StrokeShape="RoundRectangle 200">
                <Image Source="dotnet_bot.png"
                    Aspect="AspectFill"/>
            </Border>

            <Frame BorderColor="Gray"
                   CornerRadius="5"
                   Padding="8">
                <StackLayout>
                    <Label Text="Exemplo Card"
                           FontSize="30"
                           FontAttributes="Bold" />
                    <BoxView Color="Gray"
                             HeightRequest="2"
                             HorizontalOptions="Fill" />
                    <Label Text="Usando Frame e StackLayout"
                           FontSize="20" />
                </StackLayout>
            </Frame>

            <WebView HeightRequest="500"
                     Source="https://macoratti.net"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>